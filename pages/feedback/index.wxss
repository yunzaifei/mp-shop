/* pages/feedback/index.wxss */
page {
  background-color: #eee;
}
.fb-container {
  padding: 20rpx;
  color: #666;
}
.fb-title {
  
}
.fb-tips {
  display: flex;
  flex-wrap: wrap;
}
.fb-tips text {
  width: calc(30% - 20rpx);
  padding: 10rpx;
  margin: 20rpx 10rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #fff;
}
.fb-content {
  background-color: #fff;
  margin-top: 20rpx;
}
.fb-content textarea {
  padding: 10rpx;
}
.fb-tool {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
}
.fb-tool button {
  height: 90rpx;
  width: 90rpx;
  font-size: 60rpx;
  padding: 0;
  margin: 0 0 0 20rpx;
  color: #ccc;
}
.form-btn-wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.form-btn-wrap button {
  width: 30%;
  margin: 0 !important;
}