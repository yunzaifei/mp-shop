/* pages/collect/index.wxss */
.collect-cotainer {
  background-color: #f3f4f6;
}
.collect-title {
  padding: 40rpx 0;
  display: flex;
}
.collect-tips {
  padding: 15rpx;
  margin-left: 25rpx;
  border: 1rpx solid #ccc;
  background-color: #fff;
}
.active {
  color: var(--themeColor);
  border-color: currentColor;
}
.goods-item {
  display: flex;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
}
.image-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.image-wrap image {
  width: 70%;
}
.info-wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
}