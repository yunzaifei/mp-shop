/* pages/goods_detail/index.wxss */
.detail-swiper {
  height: 450rpx;
  text-align: center;
}
.detail-swiper image {
  width: 60%;
}
.goods-price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.goods-name-row {
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
  font-size: 30rpx;
}
.goods-name {
  flex: 5;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 1rpx solid #000;
}
.goods-info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
  padding: 20rpx;
}
.goods-info-content {
  padding-bottom: 90rpx;
}
.bottom {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.bottom-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.bottom-item button { 
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  width: 100%;
  height: 100%;
}
.btn-cart {
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
}
.btn-buy {
  flex: 2;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
}