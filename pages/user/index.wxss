/* pages/user/index.wxss */
page {
  background-color: #edece8;
}
.user-info-wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.user-img-wrap {
  position: relative;
}
.user-btn {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translateX(-50%);
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
}
.user-bg {
  height: 45vh;
  filter: blur(10rpx);
}
.user-info {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user-name {
  color: #fff;
  margin-top: 40rpx;
}
.user-content {
  position: relative;
}
.user-main {
  position: relative;
  width: 90%;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #666;
}
.history-wrap {
  background-color: #fff;
  display: flex;
}
.history-wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.his-num {
  color: var(--themeColor);
}
.his-name {
  font-size: 30rpx;
}
.order-wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.order-title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.order-content {
  display: flex;
}
.order-content navigator {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
.iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.order-name {
 font-size: 30rpx;
}
.address-wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.app-info-wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.app-info-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.app-info-contact {
  display: flex;
  justify-content: space-between;
}
.recommend-wrap {
  margin: 30rpx 0;
  background-color: #fff;
  padding: 20rpx;
}