/* pages/search/index.wxss */
page {
  background-color: #dedede;
}
.search-row {
  height: 60rpx;
  display: flex;
  padding: 20rpx 20rpx 0;
}
.search-row input {
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding-left: 30rpx;
}
.search-row button {
  width: 80rpx;
  height: 100%;
  font-size: 26rpx;
  padding: 0;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-content {
  margin-top: 30rpx;
  padding: 0 20rpx 20rpx;
}
.search-item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}